<% provide(:title, 'Новый факультет') %>
<h1>Новый факультет</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@faculty) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Название" %>
        <%= f.text_field :name %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>