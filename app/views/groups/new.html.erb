<% provide(:title, 'Новая группа') %>
<h1>Новая группа</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Название" %>
        <%= f.text_field :name %>

        <%= f.label :gender, "Пол" %>
        <%= f.text_field :gender %>

        <%= f.label :course, "Курс" %>
        <%= f.text_field :course %>

        <%= f.label :health_group, "Группа по здоровью" %>
        <%= f.text_field :health_group %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>